#Escribe un programa que pida al usuario dos números y muestre la suma, resta, multiplicación y división de esos números

def menu_principal(): 
    while True: 
        print("\n===== Menú Principal =====") 
        print("1. Sumar dos números") 
        print("2. Restar dos números") 
        print("3. Multiplicar dos números") 
        print("4. Dividir dos números") 
        print("5. Salir") 
         
        # Pedir opción al usuario 
        opcion = input("Selecciona una opción: ") 
 
        if opcion == "1": 
            # Sumar 
            numero1 = float(input("Ingresa el primer número: ")) 
            numero2 = float(input("Ingresa el segundo número: ")) 
            print(f"El resultado de la suma es: {numero1 + numero2}") 
        elif opcion == "2": 
            # Restar 
            numero1 = float(input("Ingresa el primer número: ")) 
            numero2 = float(input("Ingresa el segundo número: ")) 
            print(f"El resultado de la resta es: {numero1 - numero2}") 
        elif opcion == "3": 
            # Multiplicar 
            numero1 = float(input("Ingresa el primer número: ")) 
            numero2 = float(input("Ingresa el segundo número: ")) 
            print(f"El resultado de la multiplicación es: {numero1 * numero2}") 
        elif opcion == "4": 
            # Dividir 
            numero1 = float(input("Ingresa el primer número: ")) 
            numero2 = float(input("Ingresa el segundo número: ")) 
            if numero2 != 0: 
Ing.Carlos Garcia 
                print(f"El resultado de la división es: {numero1 / numero2}") 
            else: 
                print("No se puede dividir entre cero. Intenta de nuevo.") 
        elif opcion == "5": 
            # Salir 
            print("¡Gracias por usar la aplicación! Hasta luego.") 
            break 
        else: 
            print("Opción inválida. Por favor, selecciona una opción válida.") 
 
# Ejecutar el programa 
menu_principal() 
